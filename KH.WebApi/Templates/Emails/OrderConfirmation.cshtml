@using KH.Dto.Models.EmailDto.Response

@model OrderConfirmationModel

@{
    ViewBag.Title = "Order Confirmation";
}


<h1>Thank you for your order, @Model.UserName!</h1>
<p>Your order <strong>@Model.OrderId</strong> has been placed successfully.</p>

<h3>Order Details:</h3>
<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>$@product.Price</td>
                <td>@product.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<p>You can download your invoice by clicking the link below:</p>
<a href="@Model.InvoiceLink">Download Invoice</a>

<div class="footer">
    <p>&copy; 2024 Your Company. All rights reserved.</p>
</div>
